@page
@model EVCenterService.Pages.Customer.ProfileModel
@{
    ViewData["Title"] = "Thông tin Cá nhân";
}

<style>
    .profile-tabs {
        --bs-nav-tabs-border-color: rgba(255, 255, 255, 0.15);
        --bs-nav-tabs-link-hover-border-color: rgba(255, 255, 255, 0.15);
    }

        .profile-tabs .nav-link {
            color: #adb5bd;
            border-top-left-radius: 0.5rem;
            border-top-right-radius: 0.5rem;
        }

            .profile-tabs .nav-link.active {
                color: #ffffff;
                font-weight: 600;
                background-color: transparent;
                border-color: rgba(255, 255, 255, 0.15);
                border-bottom-color: #0d1117;
                margin-bottom: -1px;
            }

            .profile-tabs .nav-link:hover {
                color: #ffffff;
            }
</style>

<h2 class="mb-4 text-white">Thông tin Cá nhân</h2>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.StatusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card data-card">
    <div class="card-header pt-3">
        <ul class="nav nav-tabs profile-tabs" id="profileTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="info-tab" type="button">
                    <i class="bi bi-person-fill me-2"></i>Thông tin Tài khoản
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="password-tab" asp-page="ChangePassword">
                    <i class="bi bi-key-fill me-2"></i>Bảo mật & Mật khẩu
                </a>
            </li>
        </ul>
    </div>

    <div class="card-body p-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input class="form-control" disabled value="@Model.Email" />
                        <label>Email (không thể thay đổi)</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.FullName" class="form-control" placeholder="Họ và tên" />
                        <label asp-for="Input.FullName"></label>
                        <span asp-validation-for="Input.FullName" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Số điện thoại" />
                        <label asp-for="Input.PhoneNumber"></label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold mt-3">
                <i class="bi bi-check-circle me-2"></i>
                Lưu Thay đổi Thông tin
            </button>
        </form>
    </div>
</div>