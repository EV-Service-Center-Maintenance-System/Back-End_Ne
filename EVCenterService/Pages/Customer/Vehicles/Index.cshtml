@page
@model EVCenterService.Pages.Customer.Vehicles.IndexModel
@{
    ViewData["Title"] = "Manage Car";
}
<h2 class="mb-4">🚗 Quản lý xe</h2>

<p>
    <a asp-page="Create" class="btn btn-primary">+ Thêm xe mới</a>
</p>

@if (Model.VehicleList == null || !Model.VehicleList.Any())
{
    <div class="alert alert-info">Bạn chưa có xe nào được đăng ký.</div>
}
else
{
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Model</th>
                <th>VIN</th>
                <th>Dung lượng pin (kWh)</th>
                <th>Số km</th>
                <th>Số lần bảo dưỡng</th>
                <th>Ngày bảo trì gần nhất</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.VehicleList)
            {
                <tr>
                    <td>@item.Model</td>
                    <td>@item.Vin</td>
                    <td>@item.BatteryCapacity?.ToString("0.##")</td>
                    <td>@item.Mileage?.ToString("N0")</td>

                    <td class="text-center">
                        <span class="badge bg-info text-dark">@item.MaintenanceCount lần</span>
                    </td>

                    <td>@(item.LastMaintenanceDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                    <td class="text-end">
                        <div class="btn-group">
                            <a asp-page="History" asp-route-id="@item.VehicleId" class="btn btn-sm btn-info text-white" title="Xem nhật ký">
                                <i class="bi bi-journal-text"></i>
                            </a>

                            <a asp-page="Edit" asp-route-id="@item.VehicleId" class="btn btn-sm btn-warning">Sửa</a>
                            <a asp-page="Delete" asp-route-id="@item.VehicleId" class="btn btn-sm btn-danger">Xóa</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}