@page "{id:int}"
@model EVCenterService.Pages.Customer.Vehicles.HistoryModel
@{
    ViewData["Title"] = "Lịch sử Bảo dưỡng Xe";
    Layout = "_CustomerLayout";
}

<div class="page-header header-card-blue mb-4">
    <h1 class="mb-0 text-white">@ViewData["Title"]</h1>
    <p class="text-white-50 mb-0">Xe: @Model.Vehicle.Model - VIN: @Model.Vehicle.Vin</p>
</div>

<a asp-page="./Index" class="btn btn-secondary mb-3"><i class="bi bi-arrow-left"></i> Quay lại</a>

@if (!Model.MaintenanceHistory.Any())
{
    <div class="alert alert-info">Chiếc xe này chưa có lịch sử bảo dưỡng nào.</div>
}
else
{
    <div class="card data-card border-0">
        <div class="card-body">
            <div class="timeline">
                @foreach (var record in Model.MaintenanceHistory)
                {
                    <div class="card mb-3 bg-dark border-secondary">
                        <div class="card-header d-flex justify-content-between align-items-center border-secondary">
                            <h5 class="mb-0 text-white">
                                <i class="bi bi-wrench-adjustable-circle me-2 text-primary"></i>
                                Bảo dưỡng ngày @record.AppointmentDate.ToString("dd/MM/yyyy")
                            </h5>
                            <span class="badge bg-success">Hoàn thành</span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="text-muted mb-1">Dịch vụ thực hiện:</p>
                                    <ul class="text-white">
                                        @foreach (var detail in record.OrderDetails)
                                        {
                                            <li>@detail.Service?.Name</li>
                                        }
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <p class="text-muted mb-1">Thông tin chi tiết:</p>
                                    <ul class="list-unstyled text-white-50">
                                        <li><strong>Kỹ thuật viên:</strong> @(record.Technician?.FullName ?? "N/A")</li>

                                        <li><strong>Số Km lúc đó:</strong> @(record.MileageAtService?.ToString("N0") ?? record.Vehicle?.Mileage?.ToString("N0") ?? "N/A") km</li>

                                        <li><strong>Tổng chi phí:</strong> @record.TotalCost?.ToString("N0") đ</li>
                                        @if (!string.IsNullOrEmpty(record.ChecklistNote))
                                        {
                                            <li class="mt-2">
                                                <strong>Ghi chú KTV:</strong><br />
                                                <em class="text-info">@record.ChecklistNote</em>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}