@page "{id:int}"
@model EVCenterService.Pages.Customer.Appointments.DeleteModel
@{
    Layout = "_CustomerLayout";
    ViewData["Title"] = "Hủy Lịch Hẹn";
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="card data-card">
    <div class="card-body">
        @if (Model.Booking == null)
        {
            <div class="alert alert-warning">Không tìm thấy lịch hẹn.</div>
        }
        else
        {
            <h5 class="mb-3">Bạn có chắc chắn muốn hủy lịch hẹn này không?</h5>

            <dl class="row">
                <dt class="col-sm-3">Xe:</dt>
                <dd class="col-sm-9">@Model.Booking.Vehicle?.Model</dd>

                <dt class="col-sm-3">Ngày hẹn:</dt>
                <dd class="col-sm-9">@Model.Booking.AppointmentDate.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Dịch vụ:</dt>
                <dd class="col-sm-9">
                    @string.Join(", ", Model.Booking.OrderDetails.Select(d => d.Service?.Name ?? "N/A"))
                </dd>
            </dl>

            <div class="alert alert-danger mt-3">
                <strong>Lưu ý:</strong> Hành động này không thể hoàn tác.
            </div>

            <form method="post">
                <input type="hidden" asp-for="Booking.OrderId" />
                <button type="submit" class="btn btn-danger">Xác nhận Hủy</button>
                <a asp-page="Index" class="btn btn-secondary ms-2">Quay lại</a>
            </form>
        }
    </div>
</div>