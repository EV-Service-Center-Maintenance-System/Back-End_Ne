@page
@model EVCenterService.Pages.Customer.Appointments.EditModel
@{
	Layout = "_AppLayout";
	ViewData["Title"] = "Update Order";
}
<h2 class="mb-3">Update</h2>

<form method="post" class="card p-4 shadow-sm bg-light">
    <input type="hidden" asp-for="Booking.OrderId" />

    <div class="form-group mb-3">
        <label>Xe:</label>
        <select asp-for="Booking.VehicleId" asp-items="Model.VehicleList" class="form-control" required></select>
    </div>

    <div class="form-group mb-3">
        <label>Loại dịch vụ:</label>
        <select id="serviceSelect" asp-for="SelectedServiceId" asp-items="Model.ServiceList" class="form-control" required></select>
    </div>

    <div class="form-group mb-3">
        <label>Ngày hẹn:</label>
        <input asp-for="Booking.AppointmentDate" type="date" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label>Ghi chú:</label>
        <textarea asp-for="Booking.ChecklistNote" class="form-control" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a asp-page="Index" class="btn btn-secondary ms-2">Hủy</a>
</form>