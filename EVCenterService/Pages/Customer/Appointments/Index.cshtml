@page
@model EVCenterService.Pages.Customer.Appointments.IndexModel
@{
    Layout = "_CustomerLayout";
    ViewData["Title"] = "Lịch sử Lịch hẹn";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1>@ViewData["Title"]</h1>
        <p class="lead mb-0 text-muted">Theo dõi trạng thái các cuộc hẹn và lịch sử dịch vụ của bạn.</p>
    </div>
    <a asp-page="Create" class="btn btn-add-new" style="background-color: var(--primary-color); color: var(--text-dark);">
        <i class="bi bi-plus-lg me-2"></i> Đặt lịch hẹn mới
    </a>
</div>

@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-success mt-3">@TempData["StatusMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
}


<div class="card data-card border-0 mt-4">
    <div class="card-body">
        @if (Model.Bookings == null || !Model.Bookings.Any())
        {
            <div class="alert alert-info mb-0">Bạn chưa có lịch hẹn nào.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-borderless table-custom">
                    <thead>
                        <tr>
                            <th>Xe</th>
                            <th>Dịch vụ</th>
                            <th>Ngày hẹn</th>
                            <th>Trạng thái</th>
                            <th>Ghi chú / Kỹ thuật viên</th>
                            <th class="text-end">Tổng tiền</th>
                            <th class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Bookings)
                        {
                            var badgeClass = order.Status?.ToLower() switch
                            {
                                "pending" => "badge-custom bg-warning text-dark",
                                "pendingquote" => "badge-custom bg-warning text-dark",
                                "confirmed" => "badge-custom bg-primary",
                                "inprogress" => "badge-custom bg-info text-dark",
                                "techniciancompleted" => "badge-custom bg-success",
                                "completed" => "badge-custom bg-success",
                                "paid" => "badge-custom bg-success",
                                "cancelled" => "badge-custom bg-danger",
                                _ => "badge-custom bg-secondary"
                            };

                            string displayNote = order.ChecklistNote ?? "";
                            if (!string.IsNullOrEmpty(order.TechnicianName))
                            {
                                displayNote += $" — 👨‍🔧 KTV: {order.TechnicianName}";
                            }

                            <tr>
                                <td><span class="fw-bold">@order.VehicleModel</span></td>
                                <td class="text-muted">@order.ServiceNames</td>
                                <td class="text-muted">@order.AppointmentDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td><span class="badge @badgeClass">@order.Status?.ToUpperInvariant()</span></td>
                                <td class="text-muted small">@displayNote</td>
                                <td class="text-end fw-bold">@order.TotalCost?.ToString("N0") đ</td>

                                <td class="text-center">
                                    @if (order.Status == "TechnicianCompleted" || order.Status == "Completed" || order.Status == "Paid")
                                    {
                                        @if (order.HasFeedback)
                                        {
                                            <span class="badge-custom badge-active">Đã đánh giá</span>
                                        }
                                        else
                                        {
                                            <a asp-page="/Customer/Feedback/Create" asp-route-orderId="@order.OrderId" class="btn btn-sm btn-warning fw-bold" title="Đánh giá dịch vụ">
                                                <i class="bi bi-star-fill"></i> Đánh giá
                                            </a>
                                        }
                                    }
                                    else if (order.Status?.Equals("Pending", StringComparison.OrdinalIgnoreCase) == true)
                                    {
                                        <a asp-page="Edit" asp-route-id="@order.OrderId" class="btn action-btn" title="Sửa"><i class="bi bi-pencil-square"></i></a>
                                        <a asp-page="Delete" asp-route-id="@order.OrderId" class="btn action-btn" title="Hủy"><i class="bi bi-trash-fill"></i></a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>