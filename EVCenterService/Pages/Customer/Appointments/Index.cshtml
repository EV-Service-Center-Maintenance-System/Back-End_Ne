@page
@model EVCenterService.Pages.Customer.Appointments.IndexModel
@{
    Layout = "_CustomerLayout";
    ViewData["Title"] = "Lịch sử Lịch hẹn";
}

<div class="page-header header-card-blue d-flex justify-content-between align-items-center">
    <div>
        <h1 class="mb-1">@ViewData["Title"]</h1>
        <p class="lead mb-0">Theo dõi trạng thái các cuộc hẹn và lịch sử dịch vụ của bạn.</p>
    </div>
    <a asp-page="Create" class="btn btn-light" style="font-weight: 600;">
        <i class="bi bi-plus-lg me-2"></i> Đặt lịch hẹn mới
    </a>
</div>

@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-success mt-3">@TempData["StatusMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
}


<div class="card data-card mt-4">
    <div class="card-body">
        @if (Model.Bookings == null || !Model.Bookings.Any())
        {
            <div class="alert alert-info mb-0">Bạn chưa có lịch hẹn nào.</div>
        }
        else
        {
            <div class="appointment-card-list">
                @foreach (var order in Model.Bookings)
                {
                    var badgeClass = order.Status?.ToLower() switch
                    {
                        "pending" => "badge-custom bg-warning text-dark",
                        "pendingquote" => "badge-custom bg-warning text-dark",
                        "confirmed" => "badge-custom bg-primary",
                        "inprogress" => "badge-custom bg-info text-dark",
                        "techniciancompleted" => "badge-custom bg-success",
                        "completed" => "badge-custom bg-success",
                        "paid" => "badge-custom bg-success",
                        "cancelled" => "badge-custom bg-danger",
                        _ => "badge-custom bg-secondary"
                    };
                    string displayNote = order.ChecklistNote ?? "";
                    if (!string.IsNullOrEmpty(order.TechnicianName))
                    {
                        displayNote += $" — 👨‍🔧 KTV: {order.TechnicianName}";
                    }

                    <div class="appointment-card-item">

                        <div class="icon-wrapper">
                            <i class="bi bi-calendar-check"></i>
                        </div>

                        <div class="vehicle-info">
                            <h5>@order.VehicleModel</h5>
                            <span class="badge @badgeClass">@order.Status?.ToUpperInvariant()</span>
                        </div>

                        <div class="detail-block">
                            <span class="label">Ngày hẹn</span>
                            <span class="value">@order.AppointmentDate.ToString("dd/MM/yyyy")</span>
                        </div>

                        <div class="detail-block">
                            <span class="label">Giờ hẹn</span>
                            <span class="value">@order.AppointmentDate.ToString("HH:mm")</span>
                        </div>

                        <div class="detail-block">
                            <span class="label">Tổng tiền</span>
                            <span class="value fw-bold">@order.TotalCost?.ToString("N0") đ</span>
                        </div>

                        <div class="detail-block">
                            <span class="label">Ghi chú / Kỹ thuật viên</span>
                            <span class="value" style="font-size: 0.85rem;">@displayNote</span>
                        </div>

                        <div class="action-buttons">
                            @if (order.Status == "TechnicianCompleted" || order.Status == "Completed" || order.Status == "Paid" || order.Status == "PickedUp")
                            {
                                @if (order.HasFeedback)
                                {
                                    <span class="badge-custom badge-active">Đã đánh giá</span>
                                }
                                else
                                {
                                    <a asp-page="/Customer/Feedback/Create" asp-route-orderId="@order.OrderId" class="btn btn-sm btn-primary" title="Đánh giá dịch vụ">
                                        <i class="bi bi-star-fill me-1"></i> Đánh giá
                                    </a>
                                }
                            }
                            else if (order.Status?.Equals("Pending", StringComparison.OrdinalIgnoreCase) == true)
                            {
                                <a asp-page="Edit" asp-route-id="@order.OrderId" class="btn btn-secondary btn-icon" title="Sửa"><i class="bi bi-pencil-square"></i></a>
                                <a asp-page="Delete" asp-route-id="@order.OrderId" class="btn btn-danger btn-icon" title="Hủy"><i class="bi bi-trash-fill"></i></a>
                            }
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>