@page
@model EVCenterService.Pages.Customer.Subscriptions.IndexModel
@{
    ViewData["Title"] = "Gói Dịch Vụ";
    Layout = "_CustomerLayout"; // Dùng layout của khách hàng
}

<div class="container mt-4">
    <h1 class="text-white">@ViewData["Title"]</h1>
    <p class="text-muted">Chọn gói dịch vụ phù hợp với nhu cầu của bạn.</p>

    @if (Model.UserHasActivePlan)
    {
        <div class="alert alert-info">
            <h4 class="alert-heading">Bạn đã có gói dịch vụ!</h4>
            <p>Bạn hiện đang sử dụng gói <strong>@Model.ActivePlanName</strong>, có hiệu lực đến ngày @Model.ActivePlanEndDate.ToString("dd/MM/yyyy").</p>
        </div>
    }

    <div class="row mt-4 g-4">
        @foreach (var plan in Model.Plans)
        {
            bool isThisTheActivePlan = Model.UserHasActivePlan && Model.ActivePlanId == plan.PlanId;

            <div class="col-md-6">
                <div class="card data-card h-100 border-0 @(isThisTheActivePlan ? "border border-primary" : "")">
                    <div class="card-body d-flex flex-column">

                        <h3 class="card-title text-white">@plan.Name</h3>
                        <p class="text-muted">@plan.Benefits</p>

                        <h2 class="display-5 fw-bold text-white my-3">@plan.PriceVnd.ToString("N0") đ</h2>
                        <span class="text-muted">/ @plan.DurationDays ngày</span>


                        <div class="mt-auto pt-4">
                            @if (Model.UserHasActivePlan)
                            {
                                if (isThisTheActivePlan)
                                {
                                    <button class="btn btn-success btn-lg w-100" disabled>Gói hiện tại của bạn</button>
                                }
                                else
                                {
                                    <button class="btn btn-secondary btn-lg w-100" disabled title="Bạn đã đăng ký một gói khác và không thể đăng ký 2 gói cùng lúc.">Không thể đăng ký</button>
                                }
                            }
                            else
                            {
                                <form method="post">
                                    <input type="hidden" name="planId" value="@plan.PlanId" />
                                    <button type="submit" class="btn btn-primary btn-lg w-100">Đăng ký ngay</button>
                                </form>
                            }
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
</div>