@page "{id:int}"
@model EVCenterService.Pages.Staff.Appointments.DetailsModel
@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Appointment Details";
}

<h1 class="h2 mb-4">Appointment Details #@Model.Appointment.OrderId</h1>

<div class="row g-4">
    <!-- LEFT COLUMN: Appointment Info -->
    <div class="col-lg-7">
        <div class="card h-100 shadow">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">Appointment Information</h5>
            </div>
            <div class="card-body">
                <p><strong>Customer:</strong> @Model.Appointment.User?.FullName (@Model.Appointment.User?.Email)</p>
                <p><strong>Vehicle:</strong> @Model.Appointment.Vehicle?.Model</p>
                <p><strong>Requested Services:</strong></p>
                <ul>
                    @foreach (var detail in Model.Appointment.OrderDetails)
                    {
                        <li>@detail.Service?.Name</li>
                    }
                </ul>
                <p><strong>Customer Notes:</strong> @Model.Appointment.ChecklistNote</p>
                <p><strong>Requested Time:</strong> @Model.Appointment.AppointmentDate.ToString("dd/MM/yyyy HH:mm")</p>
                <p>
                    <strong>Status:</strong>
                    <span class="badge bg-@(Model.Appointment.Status?.ToLower() switch
                          {
                              "confirmed" => "primary",
                              "inprogress" => "info text-dark",
                              "completed" => "success",
                              "cancelled" => "danger",
                              _ => "secondary"
                          })">
                        @Model.Appointment.Status
                    </span>
                </p>
            </div>
        </div>
    </div>

    <!-- RIGHT COLUMN: Actions -->
    <div class="col-lg-5">
        <div class="card h-100 shadow">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">Actions</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="Assign" asp-route-id="@Model.Appointment.OrderId">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Assign Technician</label>
                        <select name="technicianId" class="form-select" required>
                            <option value="">-- Select Technician --</option>
                            @foreach (var tech in Model.TechnicianList)
                            {
                                <option value="@tech.Value">@tech.Text</option>
                            }
                        </select>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-person-gear me-2"></i>Assign Technician
                        </button>
                    </div>
                </form>

                <hr class="my-4" />

                <div class="d-grid gap-2">
                    <form method="post" asp-page-handler="Confirm" asp-route-id="@Model.Appointment.OrderId">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-check-circle me-2"></i>Confirm Appointment
                        </button>
                    </form>

                    <form method="post" asp-page-handler="Reject" asp-route-id="@Model.Appointment.OrderId">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-x-circle me-2"></i>Decline Appointment
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-4 text-center">
        @TempData["Message"]
    </div>
}
