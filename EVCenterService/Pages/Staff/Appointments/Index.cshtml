@page
@model EVCenterService.Pages.Staff.Appointments.IndexModel
@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Quản lý Dịch Vụ";
}

<h1 class="h2 mb-4">@ViewData["Title"]</h1>

<ul class="nav nav-tabs" id="appointmentTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="manage-tab" data-bs-toggle="tab" data-bs-target="#manage-tab-pane" type="button" role="tab" aria-controls="manage-tab-pane" aria-selected="true">
            Cần xử lý (Manage)
            <span class="badge bg-danger ms-1">@Model.PendingAppointments.Count</span>
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="finalize-tab" data-bs-toggle="tab" data-bs-target="#finalize-tab-pane" type="button" role="tab" aria-controls="finalize-tab-pane" aria-selected="false">
            Chờ duyệt báo giá (Review)
            <span class="badge bg-warning text-dark ms-1">@Model.ReadyToFinalizeAppointments.Count</span>
        </button>
    </li>
</ul>

<div class="tab-content" id="appointmentTabsContent">

    <div class="tab-pane fade show active" id="manage-tab-pane" role="tabpanel" aria-labelledby="manage-tab" tabindex="0">
        <div class="card card-body border-top-0 rounded-bottom">
            @if (Model.PendingAppointments == null || !Model.PendingAppointments.Any())
            {
                <div class="alert alert-info text-center mb-0">Hiện không có lịch hẹn nào "Chờ xác nhận".</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle text-center">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Xe</th>
                                <th>Dịch vụ</th>
                                <th>Khách hàng</th>
                                <th>Ngày hẹn</th>
                                <th>Ghi chú</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 1;
                            }
                            @foreach (var order in Model.PendingAppointments)
                            {
                                var serviceNames = string.Join(", ", order.OrderDetails.Select(d => d.Service?.Name));
                                <tr>
                                    <td>@(index++)</td>
                                    <td>@order.Vehicle?.Model</td>
                                    <td>@serviceNames</td>
                                    <td>@order.User?.FullName</td>
                                    <td>@order.AppointmentDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@order.ChecklistNote</td>
                                    <td>
                                        <form method="post" asp-page-handler="Assign" asp-route-id="@order.OrderId" class="d-inline-flex">
                                            <select name="technicianId" class="form-select form-select-sm d-inline-block w-auto me-1">
                                                <option value="">--Chọn KTV--</option>
                                                @foreach (var tech in Model.TechnicianList)
                                                {
                                                    <option value="@tech.Value">@tech.Text</option>
                                                }
                                            </select>
                                            <button type="submit" class="btn btn-sm btn-warning" title="Phân công">
                                                <i class="bi bi-person-gear"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <div class="tab-pane fade" id="finalize-tab-pane" role="tabpanel" aria-labelledby="finalize-tab" tabindex="0">
        <div class="card card-body border-top-0 rounded-bottom">
            @if (Model.ReadyToFinalizeAppointments == null || !Model.ReadyToFinalizeAppointments.Any())
            {
                <div class="alert alert-info text-center mb-0">Không có báo giá nào chờ duyệt.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Xe</th>
                                <th>Dịch vụ</th>
                                <th>Khách hàng</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int indexFinalize = 1;
                            }
                            @foreach (var order in Model.ReadyToFinalizeAppointments)
                            {
                                var serviceNames = string.Join(", ", order.OrderDetails.Select(d => d.Service?.Name));
                                <tr>
                                    <td>@(indexFinalize++)</td>
                                    <td>@order.Vehicle?.Model</td>
                                    <td>@serviceNames</td>
                                    <td>@order.User?.FullName</td>
                                    <td><span class="badge bg-warning text-dark">@order.Status</span></td>
                                    <td>
                                        <a asp-page="./Finalize" asp-route-id="@order.OrderId" class="btn btn-sm btn-primary">
                                            <i class="bi bi-card-checklist me-1"></i> Duyệt Báo Giá & Gửi Hóa Đơn
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>