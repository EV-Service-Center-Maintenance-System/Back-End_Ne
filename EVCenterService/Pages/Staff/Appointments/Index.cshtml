@page
@model EVCenterService.Pages.Staff.Appointments.IndexModel
@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Quản lý Lịch hẹn";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <div class="page-header header-card-blue">
            <h1 class="mb-0">@ViewData["Title"]</h1>
            <p class="lead mb-0">Xử lý các lịch hẹn của khách hàng theo quy trình.</p>
        </div>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Message"]</div>
}

<ul class="nav nav-pills nav-pills-custom mt-4" id="appointmentTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending-tab-pane" type="button" role="tab">
            Chờ duyệt đơn
            <span class="badge bg-danger ms-1">@Model.PendingApprovalAppointments.Count</span>
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="assign-tab" data-bs-toggle="tab" data-bs-target="#assign-tab-pane" type="button" role="tab">
            Cần phân công
            <span class="badge bg-info ms-1">@Model.PendingAssignmentAppointments.Count</span>
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="finalize-tab" data-bs-toggle="tab" data-bs-target="#finalize-tab-pane" type="button" role="tab">
            Chờ duyệt báo giá
            <span class="badge bg-warning text-dark ms-1">@Model.ReadyToFinalizeAppointments.Count</span>
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pickup-tab" data-bs-toggle="tab" data-bs-target="#pickup-tab-pane" type="button" role="tab">
            Quản lý Giao xe
            <span class="badge bg-success ms-1">@Model.CompletedForPickupOrders.Count</span>
        </button>
    </li>
</ul>

<div class="tab-content" id="appointmentTabsContent">

    <div class="tab-pane fade show active" id="pending-tab-pane" role="tabpanel">
        <div class="card data-card border-top-0 rounded-bottom">
            @if (!Model.PendingApprovalAppointments.Any())
            {
                <div class="card-body text-center text-muted">Không có lịch hẹn nào chờ duyệt.</div>
            }
            else
            {
                <div class="staff-card-list p-3">
                    @foreach (var order in Model.PendingApprovalAppointments)
                    {
                        <div class="staff-card-item">
                            <div class="customer-name">@order.User?.FullName</div>

                            <div class="vehicle-info">@order.Vehicle?.Model (@order.Vehicle?.Vin)</div>

                            <div class="service-list">
                                <i class="bi bi-tools me-1"></i> @string.Join(", ", order.OrderDetails.Select(d => d.Service?.Name))
                            </div>

                            <div class="appointment-time">
                                <i class="bi bi-calendar-event me-1"></i> @order.AppointmentDate.ToString("dd/MM/yyyy HH:mm")
                            </div>

                            <div class="card-actions-row">
                                <form method="post" asp-page-handler="Confirm" asp-route-id="@order.OrderId" class="d-inline">
                                    <button type="submit" class="btn btn-success btn-icon" title="Xác nhận"><i class="bi bi-check-circle"></i></button>
                                </form>
                                <form method="post" asp-page-handler="Reject" asp-route-id="@order.OrderId" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-icon" title="Từ chối"><i class="bi bi-x-circle"></i></button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <div class="tab-pane fade" id="assign-tab-pane" role="tabpanel">
        <div class="card data-card border-top-0 rounded-bottom">
            @if (!Model.PendingAssignmentAppointments.Any())
            {
                <div class="card-body text-center text-muted">Không có lịch hẹn nào chờ phân công.</div>
            }
            else
            {
                <div class="staff-card-list p-3">
                    @foreach (var order in Model.PendingAssignmentAppointments)
                    {
                        <div class="staff-card-item" style="grid-template-columns: 1.5fr 1fr 2fr 1.5fr 1.5fr;">
                            <div class="customer-name">@order.User?.FullName</div>

                            <div class="vehicle-info">@order.Vehicle?.Model (@order.Vehicle?.Vin)</div>

                            <div class="service-list">
                                <i class="bi bi-tools me-1"></i> @string.Join(", ", order.OrderDetails.Select(d => d.Service?.Name))
                            </div>

                            <div class="appointment-time">
                                <i class="bi bi-calendar-event me-1"></i> @order.AppointmentDate.ToString("dd/MM/yyyy HH:mm")
                            </div>

                            <div class="card-actions">
                                <form method="post" asp-page-handler="Assign" asp-route-id="@order.OrderId" class="assign-form">
                                    <select name="technicianId" class="form-select">
                                        @if (Model.AvailableTechniciansMap.TryGetValue(order.OrderId, out var techListForThisOrder) && techListForThisOrder.Any())
                                        {
                                            <option value="">-- Chọn KTV --</option>
                                            @foreach (var tech in techListForThisOrder)
                                            {
                                                <option value="@tech.Value">@tech.Text</option>
                                            }
                                        }
                                        else
                                        {
                                            <option value="" disabled selected>Không có KTV phù hợp</option>
                                        }
                                    </select>
                                    <button type="submit" class="btn btn-primary btn-icon" title="Phân công"><i class="bi bi-person-gear"></i></button>
                                    <button type="button" class="btn btn-danger btn-icon"
                                            data-bs-toggle="modal"
                                            data-bs-target="#cancelModal"
                                            data-order-id="@order.OrderId" title="Hủy lịch hẹn">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <div class="tab-pane fade" id="finalize-tab-pane" role="tabpanel">
        <div class="card data-card border-top-0 rounded-bottom">
            @if (!Model.ReadyToFinalizeAppointments.Any())
            {
                <div class="card-body text-center text-muted">Không có báo giá nào chờ duyệt.</div>
            }
            else
            {
                <div class="staff-card-list p-3">
                    @foreach (var order in Model.ReadyToFinalizeAppointments)
                    {
                        <div class="staff-card-item" style="grid-template-columns: 1.5fr 1fr 2fr 1.5fr auto;">
                            <div class="customer-name">@order.User?.FullName</div>

                            <div class="vehicle-info">@order.Vehicle?.Model (@order.Vehicle?.Vin)</div>

                            <div class="service-list">
                                <i class="bi bi-tools me-1"></i> @string.Join(", ", order.OrderDetails.Select(d => d.Service?.Name))
                            </div>

                            <div class="appointment-time">
                                <i class="bi bi-calendar-event me-1"></i> @order.AppointmentDate.ToString("dd/MM/yyyy HH:mm")
                            </div>

                            <div class="card-actions">
                                <a asp-page="./Finalize" asp-route-id="@order.OrderId" class="btn btn-primary d-grid">
                                    <i class="bi bi-receipt me-2"></i> Duyệt BÁO GIÁ
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <div class="tab-pane fade" id="pickup-tab-pane" role="tabpanel">
        <div class="card data-card border-top-0 rounded-bottom">
            @if (!Model.CompletedForPickupOrders.Any())
            {
                <div class="card-body text-center text-muted">Không có xe nào chờ giao.</div>
            }
            else
            {
                <div class="staff-card-list p-3">
                    @foreach (var order in Model.CompletedForPickupOrders)
                    {
                        <div class="staff-card-item" style="grid-template-columns: 1.5fr 1fr 2fr 1.5fr auto;">
                            <div class="customer-name">@order.User?.FullName</div>

                            <div class="vehicle-info">@order.Vehicle?.Model (@order.Vehicle?.Vin)</div>

                            <div class="service-list">
                                <i class="bi bi-geo-alt me-1"></i> Số Km (mới): @order.Vehicle?.Mileage?.ToString("N0") km
                            </div>

                            <div class="appointment-time">
                                <i class="bi bi-calendar-check me-1"></i> Hoàn thành: @order.AppointmentDate.ToString("dd/MM/yyyy")
                            </div>

                            <div class="card-actions">
                                <form method="post" class="d-grid" asp-page-handler="ConfirmPickup" asp-route-id="@order.OrderId"
                                      onclick="return confirm('Xác nhận khách đã đến lấy xe và hoàn tất giao dịch?')">
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-check-lg me-2"></i> Xác nhận đã lấy
                                    </button>
                                </form>
                                <form method="post" class="d-grid" asp-page-handler="SendReminder" asp-route-id="@order.OrderId">
                                    <button type="submit" class="btn btn-secondary">
                                        <i class="bi bi-exclamation-lg me-2"></i> Gửi nhắc nhở
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white">
            <form method="post" asp-page-handler="Cancel">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title" id="cancelModalLabel">Xác nhận Hủy Lịch Hẹn</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn hủy lịch hẹn này? Hành động này sẽ gửi email thông báo cho khách hàng.</p>
                    <input type="hidden" name="id" id="cancelOrderId" />
                    <div class="mb-3">
                        <label for="cancellationReason" class="form-label">Lý do hủy (bắt buộc):</label>
                        <textarea name="cancellationReason" id="cancellationReason" class="form-control" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Không</button>
                    <button type="submit" class="btn btn-danger">Xác nhận Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var cancelModal = document.getElementById('cancelModal');
            cancelModal.addEventListener('show.bs.modal', function (event) {
                // Nút đã kích hoạt modal
                var button = event.relatedTarget;
                // Lấy OrderId từ data-order-id
                var orderId = button.getAttribute('data-order-id');
                // Cập nhật thẻ input ẩn trong form của modal
                var input = cancelModal.querySelector('#cancelOrderId');
                input.value = orderId;
            });
        });
    </script>
}