@page
@model EVCenterService.Pages.Admin.Parts.IndexModel
@{
    ViewData["Title"] = "Quản lý Phụ tùng";
    Layout = "_AppLayout";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-white">@ViewData["Title"]</h1>
        <p class="lead mb-0">Quản lý danh sách phụ tùng và tồn kho.</p>
    </div>
    <a asp-page="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-lg me-2"></i>Thêm Phụ tùng mới
    </a>
</div>

@if (TempData["StatusMessage"] is not null)
{
    <div class="alert alert-success">@TempData["StatusMessage"]</div>
}

<div class="card data-card border-0">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h5 class="card-title mb-0">Danh sách phụ tùng</h5>
                <p class="small mb-0">Tổng số: @Model.PartList.Count loại phụ tùng</p>
            </div>
            <div class="search-bar px-3 py-1 d-flex align-items-center">
                <i class="bi bi-search me-2 text-muted"></i>
                <input type="text" class="form-control" placeholder="Tìm kiếm phụ tùng...">
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-borderless table-custom">
                <thead>
                    <tr>
                        <th>Tên phụ tùng</th>
                        <th>Loại</th>
                        <th>Hãng</th>
                        <th>Đơn giá</th>
                        <th class="text-center">Tồn tối thiểu (Hiện tại)</th>
                        <th class="text-center">Tồn tối thiểu (Gợi ý)</th>
                        <th>Tổng tồn kho</th>
                        <th class="text-end">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PartList)
                    {
                        <tr>
                            <td><span class="fw-bold">@item.Name</span></td>
                            <td class="text-muted">@item.Type</td>
                            <td class="text-muted">@item.Brand</td>

                            <td>@item.UnitPrice?.ToString("N0") đ</td>

                            <td class="text-center">
                                @item.CurrentTotalMinThreshold
                            </td>

                            <td class="text-center fw-bold text-warning">
                                @item.SuggestedTotalMinThreshold
                                <i class="bi bi-stars"></i>
                            </td>

                            <td>
                                @if (item.TotalQuantity > 0)
                                {
                                    <span class="badge bg-success">@item.TotalQuantity</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Hết hàng</span>
                                }
                            </td>

                            <td class="text-end">
                                <button type="button" class="btn btn-outline-success btn-sm me-1"
                                        data-bs-toggle="modal" data-bs-target="#refillModal"
                                        data-part-id="@item.PartId" data-part-name="@item.Name">
                                    <i class="bi bi-plus-lg"></i>
                                </button>
                                <a asp-page="./Edit" asp-route-id="@item.PartId" class="btn btn-outline-primary btn-sm me-1" title="Chỉnh sửa"><i class="bi bi-pencil-square"></i></a>
                                <a asp-page="./Delete" asp-route-id="@item.PartId" class="btn btn-outline-danger btn-sm" title="Xóa"><i class="bi bi-trash-fill"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="refillModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white border-secondary">
            <div class="modal-header border-secondary">
                <h5 class="modal-title">Nhập thêm hàng (Refill)</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="Refill">
                <div class="modal-body">
                    <input type="hidden" name="PartId" id="modalPartId" />
                    <p>Bạn đang nhập thêm hàng cho: <strong id="modalPartName" class="text-info"></strong></p>

                    <div class="mb-3">
                        <label class="form-label">Chọn Kho (Trung tâm):</label>
                        <select name="CenterId" class="form-select bg-dark text-white border-secondary" required>
                            @foreach (var center in Model.Centers)
                            {
                                <option value="@center.Value">@center.Text</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Số lượng nhập thêm:</label>
                        <input type="number" name="Quantity" class="form-control bg-dark text-white border-secondary" min="1" required />
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-success">Xác nhận Nhập</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    var refillModal = document.getElementById('refillModal');
    refillModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var partId = button.getAttribute('data-part-id');
        var partName = button.getAttribute('data-part-name');

        var modalPartIdInput = refillModal.querySelector('#modalPartId');
        var modalPartNameText = refillModal.querySelector('#modalPartName');

        modalPartIdInput.value = partId;
        modalPartNameText.textContent = partName;
    });
</script>