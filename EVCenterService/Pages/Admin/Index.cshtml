@page
@model EVCenterService.Pages.Admin.IndexModel
@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 text-white">Dashboard</h1>
        <p>Tổng quan hoạt động của trung tâm bảo dưỡng xe điện.</p>
    </div>
</div>

<div class="row">
    <div class="col-md-3 mb-4">
        <div class="card data-card stat-card green">
            <div class="card-body text-center">
                <h6>Doanh thu (VNĐ)</h6>
                <h3>@Model.TotalRevenue.ToString("N0")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card data-card stat-card blue">
            <div class="card-body text-center">
                <h6>Tổng Hóa Đơn</h6>
                <h3>@Model.TotalInvoices</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card data-card stat-card yellow">
            <div class="card-body text-center">
                <h6>Tổng Dịch Vụ</h6>
                <h3>@Model.TotalServices</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card data-card stat-card cyan">
            <div class="card-body text-center">
                <h6>Nhân Viên & Kỹ Thuật Viên</h6>
                <h3>@Model.TotalStaff</h3>
            </div>
        </div>
    </div>
</div>

<!-- 🔹 Biểu đồ doanh thu -->
<div class="card data-card mt-4">
    <div class="card-header bg-darker text-white">
        <h5 class="mb-0">Biểu đồ doanh thu 6 tháng gần nhất</h5>
    </div>
    <div class="card-body">
        <canvas id="revenueChart" height="100"></canvas>
    </div>
</div>

<!-- 🔹 Danh sách cuộc hẹn sắp tới -->
<div class="row mt-4">

    <div class="col-lg-7">
        <div class="card data-card h-100">
            <div class="card-header bg-darker text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Lịch hẹn sắp tới</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-custom table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Khách hàng</th>
                            <th>Xe</th>
                            <th>Trạng thái</th>
                            <th>Thời gian</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.UpcomingAppointments.Any())
                        {
                            @foreach (var a in Model.UpcomingAppointments)
                            {
                                <tr>
                                    <td>@a.CustomerName</td>
                                    <td>@a.VehicleModel</td>
                                    <td>
                                        <span class="badge badge-custom bg-@(a.Status == "Pending" ? "warning text-dark" : "info")">
                                            @a.Status
                                        </span>
                                    </td>
                                    <td>@a.ScheduleTime.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">Không có cuộc hẹn nào sắp tới.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-5">
        <div class="card data-card h-100">
            <div class="card-header bg-darker text-white">
                <h5 class="mb-0">Đánh giá gần đây</h5>
            </div>
            <div class="card-body">

                <div class="avg-rating-box">
                    <span class="avg-rating-value">@Model.AverageRating.ToString("0.0")</span>
                    <div class="avg-stars">
                        <div style="width: @(Model.AverageRating / 5 * 100)%">
                            <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i>
                        </div>
                        <div>
                            <i class="bi bi-star"></i><i class="bi bi-star"></i><i class="bi bi-star"></i><i class="bi bi-star"></i><i class="bi bi-star"></i>
                        </div>
                    </div>
                    <span class="avg-rating-count">(@Model.RecentFeedbacks.Count đánh giá)</span>
                </div>

                <hr class="border-secondary" />

                <ul class="list-group list-group-flush">
                    @if (Model.RecentFeedbacks.Any())
                    {
                        @foreach (var fb in Model.RecentFeedbacks)
                        {
                            <li class="feedback-item list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1 text-white">@fb.User?.FullName</h6>
                                    <small class="text-warning">@fb.Rating <i class="bi bi-star-fill"></i></small>
                                </div>
                                <p class="mb-1 feedback-comment">@fb.Comment</p>
                                <small class="text-muted">@fb.CreatedAt.Value.ToString("dd/MM/yyyy")</small>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item bg-transparent text-muted text-center">Chưa có đánh giá nào.</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // Dữ liệu từ Backend (Ví dụ: ['11/2025'])
            const labels = [
                @Html.Raw(string.Join(",", Model.MonthlyRevenue.Select(m => $"'{m.Month:MM/yyyy}'")))
            ];

            // Dữ liệu từ Backend (Ví dụ: [29749000])
            const data = [
                @Html.Raw(string.Join(",", Model.MonthlyRevenue.Select(m => m.TotalRevenue.ToString(System.Globalization.CultureInfo.InvariantCulture))))
            ].map(Number); // Đảm bảo Javascript nhận đây là SỐ

            const ctx = document.getElementById('revenueChart').getContext('2d');

            new Chart(ctx, {
                // ***** DÒNG QUAN TRỌNG NHẤT ĐỂ SỬA LỖI LÀ ĐÂY *****
                type: 'bar',
                // ***** DÒNG QUAN TRỌNG NHẤT ĐỂ SỬA LỖI LÀ ĐÂY *****
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Doanh thu (VNĐ)',
                        data: data,
                        backgroundColor: [
                            'rgba(0, 255, 127, 0.6)',
                            'rgba(54, 162, 235, 0.6)',
                            'rgba(255, 206, 86, 0.6)',
                            'rgba(75, 192, 192, 0.6)',
                            'rgba(153, 102, 255, 0.6)',
                            'rgba(255, 159, 64, 0.6)'
                        ],
                        borderColor: [
                            'rgba(0, 255, 127, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                color: '#D4D4D4',
                                // Định dạng tiền VNĐ cho trục Y
                                callback: function(value) {
                                    return value.toLocaleString('vi-VN') + ' VNĐ';
                                }
                            },
                            grid: { color: 'rgba(255, 255, 255, 0.1)' }
                        },
                        x: {
                            ticks: { color: '#D4D4D4' },
                            grid: { color: 'rgba(255, 255, 255, 0.1)' }
                        }
                    },
                    plugins: {
                        legend: {
                            labels: { color: '#D4D4D4' }
                        },
                        // Định dạng tiền VNĐ khi di chuột
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.y !== null) {
                                        label += context.parsed.y.toLocaleString('vi-VN') + ' VNĐ';
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
}