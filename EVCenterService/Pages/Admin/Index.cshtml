@page
@model EVCenterService.Pages.Admin.IndexModel
@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 text-white">Dashboard</h1>
        <p class="text-muted">Tổng quan hoạt động của trung tâm bảo dưỡng xe điện.</p>
    </div>
</div>

<div class="row">
    <div class="col-md-3 mb-4">
        <div class="card text-center shadow-sm border-success">
            <div class="card-body">
                <h6 class="text-muted">Doanh thu (VNĐ)</h6>
                <h3 class="fw-bold text-success">@Model.TotalRevenue.ToString("N0")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card text-center shadow-sm border-primary">
            <div class="card-body">
                <h6 class="text-muted">Tổng Hóa Đơn</h6>
                <h3 class="fw-bold text-primary">@Model.TotalInvoices</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card text-center shadow-sm border-warning">
            <div class="card-body">
                <h6 class="text-muted">Tổng Dịch Vụ</h6>
                <h3 class="fw-bold text-warning">@Model.TotalServices</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card text-center shadow-sm border-info">
            <div class="card-body">
                <h6 class="text-muted">Nhân Viên & Kỹ Thuật Viên</h6>
                <h3 class="fw-bold text-info">@Model.TotalStaff</h3>
            </div>
        </div>
    </div>
</div>

<!-- 🔹 Biểu đồ doanh thu -->
<div class="card mt-4 shadow-sm">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0">Biểu đồ doanh thu 6 tháng gần nhất</h5>
    </div>
    <div class="card-body">
        <canvas id="revenueChart" height="100"></canvas>
    </div>
</div>

<!-- 🔹 Danh sách cuộc hẹn sắp tới -->
<div class="card mt-4 shadow-sm">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Lịch hẹn sắp tới</h5>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Khách hàng</th>
                    <th>Xe</th>
                    <th>Trạng thái</th>
                    <th>Thời gian</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.UpcomingAppointments.Any())
                {
                    @foreach (var a in Model.UpcomingAppointments)
                    {
                        <tr>
                            <td>@a.CustomerName</td>
                            <td>@a.VehicleModel</td>
                            <td>
                                <span class="badge bg-@(a.Status == "Completed" ? "success" : a.Status == "Pending" ? "warning" : "secondary")">
                                    @a.Status
                                </span>
                            </td>
                            <td>@a.ScheduleTime.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">Không có cuộc hẹn nào sắp tới.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // Dữ liệu từ Backend (Ví dụ: ['11/2025'])
            const labels = [
                @Html.Raw(string.Join(",", Model.MonthlyRevenue.Select(m => $"'{m.Month:MM/yyyy}'")))
            ];

            // Dữ liệu từ Backend (Ví dụ: [29749000])
            const data = [
                @Html.Raw(string.Join(",", Model.MonthlyRevenue.Select(m => m.TotalRevenue.ToString(System.Globalization.CultureInfo.InvariantCulture))))
            ].map(Number); // Đảm bảo Javascript nhận đây là SỐ

            const ctx = document.getElementById('revenueChart').getContext('2d');

            new Chart(ctx, {
                // ***** DÒNG QUAN TRỌNG NHẤT ĐỂ SỬA LỖI LÀ ĐÂY *****
                type: 'bar',
                // ***** DÒNG QUAN TRỌNG NHẤT ĐỂ SỬA LỖI LÀ ĐÂY *****
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Doanh thu (VNĐ)',
                        data: data,
                        backgroundColor: [
                            'rgba(0, 255, 127, 0.6)',
                            'rgba(54, 162, 235, 0.6)',
                            'rgba(255, 206, 86, 0.6)',
                            'rgba(75, 192, 192, 0.6)',
                            'rgba(153, 102, 255, 0.6)',
                            'rgba(255, 159, 64, 0.6)'
                        ],
                        borderColor: [
                            'rgba(0, 255, 127, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                color: '#D4D4D4',
                                // Định dạng tiền VNĐ cho trục Y
                                callback: function(value) {
                                    return value.toLocaleString('vi-VN') + ' VNĐ';
                                }
                            },
                            grid: { color: 'rgba(255, 255, 255, 0.1)' }
                        },
                        x: {
                            ticks: { color: '#D4D4D4' },
                            grid: { color: 'rgba(255, 255, 255, 0.1)' }
                        }
                    },
                    plugins: {
                        legend: {
                            labels: { color: '#D4D4D4' }
                        },
                        // Định dạng tiền VNĐ khi di chuột
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.y !== null) {
                                        label += context.parsed.y.toLocaleString('vi-VN') + ' VNĐ';
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
}