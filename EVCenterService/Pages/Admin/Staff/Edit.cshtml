@page "{id:guid}"
@model EVCenterService.Pages.Admin.Staff.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa thông tin nhân sự";
    Layout = "_AppLayout";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-7">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="StaffAccount.UserId" />
                    <input type="hidden" asp-for="StaffAccount.Password" />

                    <div class="mb-3">
                        <label asp-for="StaffAccount.FullName" class="form-label">Họ và Tên</label>
                        <input asp-for="StaffAccount.FullName" class="form-control" />
                        <span asp-validation-for="StaffAccount.FullName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="StaffAccount.Email" class="form-label">Email</label>
                        <input asp-for="StaffAccount.Email" type="email" class="form-control" />
                        <span asp-validation-for="StaffAccount.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="StaffAccount.Phone" class="form-label">Số điện thoại</label>
                        <input asp-for="StaffAccount.Phone" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label">Mật khẩu mới (để trống nếu không đổi)</label>
                        <input asp-for="NewPassword" type="password" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="StaffAccount.Role" class="form-label">Vai trò</label>
                        <select asp-for="StaffAccount.Role" class="form-select">
                            <option value="Staff">Staff</option>
                            <option value="Technican">Technican</option>
                        </select>
                        <span asp-validation-for="StaffAccount.Role" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Lưu Thay Đổi</button>
                    <a asp-page="./Index" class="btn btn-secondary">Hủy</a>
                </form>
            </div>
        </div>
    </div>
</div>