@page "{id:guid}"
@model EVCenterService.Pages.Admin.Staff.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa thông tin nhân sự";
    Layout = "_AppLayout";
}

<h2 class="mb-4 text-white"><i class="bi bi-pencil-square me-2"></i>@ViewData["Title"]</h2>

<div class="card shadow-sm border-0 col-md-7 p-4">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="EmployeeAccount.UserId" />
        <input type="hidden" asp-for="EmployeeAccount.Password" />

        <div class="mb-3">
            <label asp-for="EmployeeAccount.FullName" class="form-label">Họ và tên</label>
            <input asp-for="EmployeeAccount.FullName" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="EmployeeAccount.Email" class="form-label">Email</label>
            <input asp-for="EmployeeAccount.Email" type="email" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="EmployeeAccount.Phone" class="form-label">Số điện thoại</label>
            <input asp-for="EmployeeAccount.Phone" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="NewPassword" class="form-label">Mật khẩu mới (để trống nếu không đổi)</label>
            <input asp-for="NewPassword" type="password" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="EmployeeAccount.Role" class="form-label">Vai trò</label>
            <select asp-for="EmployeeAccount.Role" class="form-select">
                <option value="Staff">Nhân viên</option>
                <option value="Technician">Kỹ thuật viên</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        <a asp-page="./Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>