@page
@model EVCenterService.Pages.Admin.Staff.CreateModel
@{
    ViewData["Title"] = "Thêm Mới Nhân Sự";
    Layout = "_AppLayout";
}

<h2 class="mb-4 text-white"><i class="bi bi-person-plus-fill me-2"></i>@ViewData["Title"]</h2>

<div class="card shadow-sm border-0 col-md-7 p-4">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="EmployeeAccount.FullName" class="form-label">Họ và tên</label>
            <input asp-for="EmployeeAccount.FullName" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="EmployeeAccount.Email" class="form-label">Email</label>
            <input asp-for="EmployeeAccount.Email" type="email" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="EmployeeAccount.Phone" class="form-label">Số điện thoại</label>
            <input asp-for="EmployeeAccount.Phone" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="EmployeeAccount.Password" class="form-label">Mật khẩu</label>
            <input asp-for="EmployeeAccount.Password" type="password" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="EmployeeAccount.Role" class="form-label">Vai trò</label>
            <select asp-for="EmployeeAccount.Role" class="form-select">
                <option value="">-- Chọn vai trò --</option>
                <option value="Staff">Nhân viên</option>
                <option value="Technician">Kỹ thuật viên</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success">Tạo mới</button>
        <a asp-page="./Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>