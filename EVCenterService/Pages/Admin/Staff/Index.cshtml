@page
@model EVCenterService.Pages.Admin.Staff.IndexModel
@{
    ViewData["Title"] = "Quản lý nhân sự";
    Layout = "_AppLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 text-white"><i class="bi bi-people-fill me-2"></i>@ViewData["Title"]</h1>
        <p class="text-muted mb-0">Thêm, sửa, khóa và xóa tài khoản nhân viên hành chính.</p>
    </div>
    <a asp-page="Create" class="btn btn-success shadow-sm">
        <i class="bi bi-plus-lg me-2"></i>Thêm nhân viên
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Vai trò</th>
                        <th>Trạng thái</th>
                        <th class="text-end">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.EmployeeList.Any())
                    {
                        @foreach (var emp in Model.EmployeeList)
                        {
                            <tr>
                                <td>@emp.FullName</td>
                                <td>@emp.Email</td>
                                <td>@emp.Phone</td>
                                <td>
                                    <span class="badge bg-@(emp.Role == "Technician" ? "info" : "primary")">@emp.Role</span>
                                </td>
                                <td>
                                    <span class="badge bg-@(emp.Status == "Active" ? "success" : "secondary")">
                                        @(emp.Status == "Active" ? "Hoạt động" : "Bị khóa")
                                    </span>
                                </td>
                                <td class="text-end">
                                    <a asp-page="./Edit" asp-route-id="@emp.UserId" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <form method="post" asp-page-handler="ToggleStatus" asp-route-id="@emp.UserId" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-warning me-1">
                                            <i class="bi @(emp.Status == "Active" ? "bi-lock-fill" : "bi-unlock-fill")"></i>
                                        </button>
                                    </form>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@emp.UserId" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Xác nhận xóa nhân viên này?')">
                                            <i class="bi bi-trash3"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-3">Chưa có nhân viên nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
