@page
@{
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 text-primary fw-bold">Staff Management</h1>
    <a href="#" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Add New Staff
    </a>
</div>

<div class="card">
    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Staff Member</th>
                    <th>Role</th>
                    <th>Contact</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <div>
                                <div class="fw-bold">Nguyễn Văn B</div>
                                <div class="text-secondary small">Joined: 2024-03-12</div>
                            </div>
                        </div>
                    </td>
                    <td><span class="badge rounded-pill" style="background-color: #3498db;">Staff</span></td>
                    <td>staff@email.com</td>
                    <td><span class="badge rounded-pill bg-success">Active</span></td>
                    <td class="text-end">
                        <div class="btn-group">
                            <button class="btn btn-sm btn-outline-secondary"><i class="bi bi-pencil"></i> Edit</button>
                            <button class="btn btn-sm btn-outline-danger"><i class="bi bi-lock"></i> Lock</button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <div>
                                <div class="fw-bold">Trần Văn C</div>
                                <div class="text-secondary small">Joined: 2023-01-15</div>
                            </div>
                        </div>
                    </td>
                    <td><span class="badge rounded-pill" style="background-color: #95a5a6;">Technician</span></td>
                    <td>tech@email.com</td>
                    <td><span class="badge rounded-pill bg-success">Active</span></td>
                    <td class="text-end">
                        <div class="btn-group">
                            <button class="btn btn-sm btn-outline-secondary"><i class="bi bi-pencil"></i> Edit</button>
                            <button class="btn btn-sm btn-outline-danger"><i class="bi bi-lock"></i> Lock</button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>