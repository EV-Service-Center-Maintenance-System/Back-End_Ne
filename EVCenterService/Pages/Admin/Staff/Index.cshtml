@page
@model EVCenterService.Pages.Admin.Staff.IndexModel
@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Quản lý nhân sự";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 text-primary fw-bold">@ViewData["Title"]</h1>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Thêm Mới
    </a>
</div>

@if (TempData["StatusMessage"] is not null)
{
    <div class="alert alert-success">@TempData["StatusMessage"]</div>
}

<div class="card">
    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Tên nhân viên</th>
                    <th>Vai trò</th>
                    <th>Liên hệ</th>
                    <th>Trạng thái</th>
                    <th class="text-end">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.StaffList)
                {
                    <tr>
                        <td>
                            <div class="fw-bold">@user.FullName</div>
                            <div class="text-secondary small">@user.Email</div>
                        </td>
                        <td>
                            @if (user.Role == "Technican")
                            {
                                <span class="badge rounded-pill" style="background-color: #95a5a6;">@user.Role</span>
                            }
                            else
                            {
                                <span class="badge rounded-pill" style="background-color: #3498db;">@user.Role</span>
                            }
                        </td>
                        <td>@user.Phone</td>
                        <td>
                            <span class="badge rounded-pill @(user.Status == "Active" ? "bg-success" : "bg-danger")">@user.Status</span>
                        </td>
                        <td class="text-end">
                            <div class="btn-group">
                                <a asp-page="./Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-secondary"><i class="bi bi-pencil"></i> Sửa</a>
                                <form method="post" asp-page-handler="ToggleStatus" asp-route-id="@user.UserId" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-lock"></i> @(user.Status == "Active" ? "Khóa" : "Mở khóa")
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>