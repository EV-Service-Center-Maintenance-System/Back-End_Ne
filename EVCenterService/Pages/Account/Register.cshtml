@page
@model EVCenterService.Pages.Account.RegisterModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - EV Service Center</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="body-account">
    <div class="container min-vh-100 d-flex align-items-start justify-content-center py-4">
        <div class="card account-card" style="max-width: 550px; width: 100%;">
            <div class="card-body p-4">
                <div class="text-center mb-3">
                    <img src="~/images/logo.png" alt="EV Service Center Logo" class="account-logo">
                    <h2 class="fw-bold mb-1">Create Your Account</h2>
                    <p class="text-secondary">Join us to easily manage your vehicle's service history.</p>
                </div>

                <form id="registerForm" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" style="display: @(ModelState.IsValid ? "none" : "block");"></div>

                    <div class="form-floating mb-2">
                        <input asp-for="Input.FullName" class="form-control" placeholder="Full Name" />
                        <label asp-for="Input.FullName">Full Name</label>
                        <span asp-validation-for="Input.FullName" class="text-danger small"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" />
                        <label asp-for="Input.PhoneNumber">Phone Number</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.Password" class="form-control" placeholder="Password" type="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>
                    <div class="mb-3 d-grid">
                        <button class="btn btn-primary btn-lg" type="submit">Create Account</button>
                    </div>
                    <p class="text-center small text-secondary mt-3">
                        Already have an account?
                        <a asp-page="/Account/Login" class="fw-bold text-decoration-none">Log in</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>