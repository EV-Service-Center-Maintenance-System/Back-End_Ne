@page
@model Test.Pages.Account.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Login - Evolve Auto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="card shadow-md" style="width: 450px;">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <img src="~/images/evolve-auto-logo.png" alt="Evolve Auto Logo" style="height: 60px;" class="mb-3">
                <h3 class="fw-light">Welcome Back</h3>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="name@example.com">
                    <label asp-for="Input.Email">Email address</label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>
                <div class="form-floating mb-4">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password">
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
                </div>

                <p class="text-center small text-muted mt-4">
                    Don't have an account?
                    <a href="/Account/Register" class="fw-bold text-primary">Register Now</a>
                </p>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>