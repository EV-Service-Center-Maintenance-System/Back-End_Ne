<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EV Service Center</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="app-body">
    <div class="wrapper">
        <nav class="sidebar">
            <div class="sidebar-header">
                <a asp-page="/Index" class="d-flex align-items-center justify-content-center text-decoration-none">
                    <img src="~/images/evolve-auto-logo.png" alt="EV Service Center Logo" class="sidebar-logo">
                    <span class="fs-5 fw-bold text-white ms-2">EV Center</span>
                </a>
            </div>
            <ul class="nav flex-column sidebar-nav">

                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/Index") ? "active" : "")" asp-page="/Admin/Index">
                            <i class="bi bi-grid-fill"></i> Tổng quan
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/Staff") ? "active" : "")" asp-page="/Admin/Staff/Index">
                            <i class="bi bi-people-fill"></i> Quản lý nhân sự
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/Services") ? "active" : "")" asp-page="/Admin/Services/Index">
                            <i class="bi bi-tools"></i> Quản lý dịch vụ
                        </a>
                    </li>
                }
            </ul>

            <ul class="nav flex-column sidebar-nav mt-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Account/Logout">
                        <i class="bi bi-box-arrow-left"></i> Đăng xuất
                    </a>
                </li>
            </ul>
        </nav>

        <div class="main-content">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>